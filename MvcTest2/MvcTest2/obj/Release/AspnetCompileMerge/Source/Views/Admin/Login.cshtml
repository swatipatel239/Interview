@model MvcTest2.Models.Login
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_MytemplateAdmin.cshtml";
}
@Html.ValidationSummary(true)


<section id="contact" class="parallax-section">
    <div class="container" id="contact">
        <div class="row">
            <div class="col-md-offset-1 col-md-10 col-sm-12 text-center">
            
                <div class="col-md-offset-1 col-md-10 col-sm-12 wow fadeIn" data-wow-delay="0.9s">
                   
                    <h1 class="heading">Admin Login CPanel</h1>
                    <hr />
                    @ViewBag.Message
                    <div class="col-md-offset-1 col-md-10 col-sm-12 wow fadeIn" data-wow-delay="0.9s">
                        @using (Html.BeginForm())
                        {
                            //This is for login page design

                            <div class="col-md-offset-3 col-md-6 col-sm-offset-3 col-sm-6">
                                @Html.ValidationSummary()
                            </div>

                            <div class="col-md-6 col-sm-6">
                                <input name="Username" type="text" class="form-control" id="username" placeholder="UserName">
                            </div>


                            <div class="col-md-6 col-sm-6">
                                <input name="Password" type="text" class="form-control" id="password" placeholder="Password">
                            </div>

                            <div class="col-md-offset-3 col-md-6 col-sm-offset-3 col-sm-6">
                                <br />
                                <input name="submit" type="submit" class="form-control" id="login" value="Login">
                            </div>


                        }
                    </div>

                    </div>
            </div>
        </div>
       
    </div>
</section>

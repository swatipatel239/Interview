@using (Ajax.BeginForm("OrderLunch", "Home", new AjaxOptions
{
 UpdateTargetId = "menu2",
 InsertionMode = InsertionMode.Replace,
 HttpMethod = "POST"
 }))
    {
        <div id="menu2">

            <h4>Price for Lunch <span>£10 per person</span></h4>
            <img src="~/Content/MyTemplate/images/maxresdefault.jpg" class="img-rounded pull-xs-left" >

            <h5></h5>


            <br />
            <div class="col-md-6 col-sm-6">
                <fieldset>
                    Please Select Item  <select id="brekfasttype" name="bftype">
                        <option value="">4 Items per Dish</option>

                        <option value="0">6 Items per Dish</option>

                        <option value="1">8 Items per Dish</option>

                       
                    </select>
                </fieldset>
            </div>
            <div class="col-md-6 col-sm-6">
                <fieldset>
                    How Many People <select id="ppltype" name="ppltype">
                        <option value="">5</option>
                        <option value="0">10</option>
                        <option value="1">15</option>
                        <option selected="selected" value="2">20</option>
                    </select>
                </fieldset>
            </div>
            <div class="col-md-6 col-sm-6">
                <input name="Name" type="text" class="form-control" id="Name" placeholder="Name">
            </div>
            <div class="col-md-6 col-sm-6">
                <input name="Phone" type="number" class="form-control" id="number" placeholder="Number">
            </div>
            <div class="col-md-6 col-sm-6">
                <input name="Location" type="text" class="form-control" id="Your Location" placeholder="Your Location">
            </div>
            <div class="col-md-6 col-sm-6">
                <input name="email" type="email" class="form-control" id="email" placeholder="Email">
            </div>
            <div class="col-md-12 col-sm-12">
                <textarea name="message" rows="8" class="form-control" id="message" placeholder="Message"></textarea>
            </div>

            <div class="col-md-offset-3 col-md-6 col-sm-offset-3 col-sm-6"><br />
                <input name="submit" type="submit" class="form-control" id="submit" value="Order Lunch!">
            </div>

        </div>
    }




@model List<MvcTest2.tblBreakfast>
@{
    ViewBag.Title = "Order Leads";
    var grid = new WebGrid(source: Model, canPage: true, rowsPerPage: 10);
    grid.Pager(WebGridPagerModes.All);
    Layout = "~/Views/Shared/_MytemplateAdmin.cshtml";
}

<style type="text/css">
    .webgrid-table
                {
                    font-family: "Trebuchet MS" , Arial, Helvetica, sans-serif;
                    font-size: 1.2em;
                    width: 100%;
                    display: table;
                    border-collapse: separate;
                    border: solid 1px #98BF21;
                    background-color: white;
                }
                .webgrid-table td, th
                {
                    border: 1px solid #98BF21;
                    padding: 3px 7px 2px;
                }
                .webgrid-header
                {
                    background-color: #A7C942;
                    color: #FFFFFF;
                    padding-bottom: 4px;
                    padding-top: 5px;
                    text-align: left;
                }
                .webgrid-footer
                {
                }
                .webgrid-row-style
                {
                    padding: 3px 7px 2px;
                }
                .webgrid-alternating-row
                {
                    background-color: #EAF2D3;
                    padding: 3px 7px 2px;
                }

</style>
<section id="contact" class="parallax-section">
    <div class="container" id="contact">
        <div class="row">
            <div class="col-md-offset-1 col-md-10 col-sm-12 text-center">
                <h1 class="heading">Orders List</h1>
                <div id="table.grid-table">
                    @grid.GetHtml(
               tableStyle: "webgrid-table",
                headerStyle: "webgrid-header",
                footerStyle: "webgrid-footer",
                alternatingRowStyle: "webgrid-alternating-row",
                rowStyle: "webgrid-row-style",
               columns: new[]
               {
               grid.Column(columnName: "OrderType", header: "OrderType"),
               grid.Column(columnName: "Message", header: "Message"),
               grid.Column(columnName: "Items", header: "Items"),
               grid.Column(columnName: "Name", header: "Name"),
               grid.Column(columnName: "numer", header: "Number"),
               grid.Column(columnName: "Location", header: "Location"),
               grid.Column(columnName: "email", header: "Email"),

               })
                    @*@grid.GetHtml
            (columns: grid.Columns(grid.Column(columnName: "OrderType", header: "OrderType"))),
            (columns: grid.Columns(grid.Column(columnName: "Items", header: "Items"))),
            (columns: grid.Columns(grid.Column(columnName: "Name", header: "Name"))),
            (columns: grid.Columns(grid.Column(columnName: "numer", header: "Number"))),
            (columns: grid.Columns(grid.Column(columnName: "Location", header: "Location"))),
            (columns: grid.Columns(grid.Column(columnName: "email", header: "Email"))),
            (columns: grid.Columns(grid.Column(columnName: "Message", header: "Message")))*@
               </div>
                 </div>

        </div>
    </div>
</section>


